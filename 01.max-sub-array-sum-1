public class Main
{
    public static void main(String[] args) {
        int ar[]={1,-2,6,-1,3};
        int n= ar.length;
        int max=Integer.MIN_VALUE;
        for(int i=0;i<n;i++){
            for(int j=i;j<n;j++){
                int s=0;
                for(int k=i;k<=j;k++){
                    s+=ar[k];
                }
                if(s>max){
                    max=s;
                }
            }
        }
        System.out.println(max);
    }
}
