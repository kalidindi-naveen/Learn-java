public class Main
{
	public static void main(String[] args) {
        int ar[]={-2,-3,4,-1,-2,1,5,-3};
        int n=ar.length;
        int max=Integer.MIN_VALUE;
        int s=0;
        for(int i=0;i<n;i++){
            s+=ar[i];
            if(s>max){
                max=s;
            }
            if(s<0){
                s=0;
            }
        }
        System.out.println(max);
	}
}

// o/p:- 7
